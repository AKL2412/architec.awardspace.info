{% extends "IntranetAdminBundle::layout.html.twig" %}
{%block title%} Ajout de filières {%endblock%}
{%block body%}
<div class="row">
			<p >
{% for message in app.session.flashbag.get('info') %}
<p class="alert span6 alert-info alert-block" style="text-align:center;margin-left:auto;margin-right:auto" > {{ message }}</p>
{% endfor %}
</p>
</div>
	<div class="row">
		
			{%for fil in filieres %}

				<div class="col-md-4">
					<div class="panel panel-default">
						<div class="panel-heading">
						<h3><i class="fa fa-cube"></i>
						<a href="{{path('intranet_admin_voir_filière',{id:fil.id})}} "> {{fil.nom}} </a>
						</h3>
						</div>
						<div class="panel-body">
							{{fil.description|slice(0,100)}}...
						</div>
						<!-- <div class="panel-footer">
						<i class="fa fa-cubes"></i>	{#{fil.matieres|length}#} matière(s)
						</div> -->
					</div>
				</div>

			{%endfor%}
		
	</div>
	<div class="row">


<div class="panel panel-default">
  <div class="panel-heading"><h3>
  <i class="fa fa-plus-circle"></i>
  Ajout d'une nouvelle filière </h3></div>
  {{ form_start(form, {'attr': {'role':'form'}}) }}
  {# Les erreurs générales du formulaire. #}
    {{ form_errors(form) }}
  <div class="panel-body">
  <div class="form-group col-md-12">
      {# Génération du label. #}
      {{ form_label(form.nom, "Le nom de la filière") }}

      {# Affichage des erreurs pour ce champ précis. #}
      {{ form_errors(form.nom) }}

      {# Génération de l'input. #}
      {{ form_widget(form.nom, {'attr': {'class': 'form-control','placeholder':'Nom de la filière'}}) }}
    </div>
    <div class="form-group col-md-12">
      {# Génération du label. #}
      {{ form_label(form.description, "Description de la filière") }}

      {# Affichage des erreurs pour ce champ précis. #}
      {{ form_errors(form.description) }}

      {# Génération de l'input. #}
      {{ form_widget(form.description, {'attr': {'class': 'form-control','placeholder':'Description de la Filière'}}) }}
    </div>
  
  {{ form_rest(form) }}
 </div>
 
  <div class="panel-footer">
    <input type="submit" value="Ajouter" class="btn btn-primary ">
    <input type="reset" value="Annuler" class="btn btn-default ">
  </div>
   {# Fermeture de la balise <form> du formulaire HTML #}
  {{ form_end(form) }}
</div>
	</div>
{%endblock%}